    "version": "0.2.0",
    "configurations": [        
        {
            "type": "jdk",
            "request": "launch",
            "name": "Run Lox.java",
            "mainClass": "${workspaceRoot}/src/main/java/com/craftinginterpreters/lox/Lox.java"
        },
        {
            "type": "jdk",
            "request": "launch",
            "name": "Run Lox with demo file",
            "mainClass": "${workspaceRoot}/src/main/java/com/craftinginterpreters/lox/Lox.java",
            "args": "${workspaceRoot}/input/demo.lox"
        },
        {
            "type": "jdk",
            "request": "launch",
            "name": "Run GenerateAst.java",
            "mainClass": "${workspaceRoot}/src/main/java/com/craftinginterpreters/tool/GenerateAst.java",
            "args": "${workspaceRoot}/src/main/java/com/craftinginterpreters/lox"
        }
    ]
